    <div class="container p-4">
        <div class="row">
            <div class="alert alert-primary" role="alert">
            <i>*Todos los campos son obligatorios.</i>
            <br>
            <i>*La habitación 103 corresponde al Departamento.</i>
            <br>
            <i>*Agregar celular sin espacios, sin el + y con el formato completo (Ejemplo: 5492901615849)</i>
            </div>
            <br>
            <div class="col-md-4 mx-auto">
                <div class="card">
                    <div class="card-body">
                        <p class="text-center h2 fw-bold mb-5 mx-1 mx-md-4 mt-4">Registro de pasajeros</p> 
                        <form action="/pasajeros" method="POST">
                            <div class="form-group">
                                <input type="text" class="form-control mt-2" name="nombre" placeholder="Nombre PAX" required autofocus>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control mt-2" name="apellido" placeholder="Apellido PAX" required>
                            </div>
                            <div class="form-group">
                                <input type="number" class="form-control mt-2" name="habitacion" placeholder="Habitación PAX" required>
                            </div>
                            <div class="form-group">
                                <input type="number" class="form-control mt-2" name="celular" placeholder="Número de WhatsApp" required>
                            </div>
                            <div class="form-group">
                                <label for="checkin">Fecha de ingreso:</label>
                                <input type="date" class="form-control" name="checkin" id="dateIn" required>
                            </div>
                            <div class="form-group">
                                <label for="checkout">Fecha de salida:</label>
                                <input type="date" class="form-control" name="checkout" id="dateOut" required>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn w-100 btn-success mt-3">Guardar</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
   
    <script>
    // seteo inputs date con la fecha de hoy para el in y la fecha de mañana para el out
    const today = new Date()
    const tomorrow = new Date ()
    tomorrow.setDate(today.getDate() + 1)
    document.getElementById('dateOut').valueAsDate = tomorrow
    document.getElementById('dateIn').valueAsDate = today  
    </script>

